<input
    id="{{id}}"
    name="{{name}}"
    type="{{type}}"
    value="{{value}}"
    class="a-input a-input--{{type}}{{#if modifierClass}} {{modifierClass}}{{/if}}"
    {{#if min}} min="{{{min}}}"{{/if}}
    {{#if max}} max="{{{max}}}"{{/if}}
    {{#if step}} step="{{{step}}}"{{/if}}
    {{#if required}} required="required"{{/if}}
    {{#if readonly}} readonly="readonly"{{/if}}
    {{#if minlength}} minlength="{{{minlength}}}"{{/if}}
    {{#if maxlength}} maxlength="{{{maxlength}}}"{{/if}}
    {{#if placeholder}} placeholder="{{{placeholder}}}"{{/if}}>