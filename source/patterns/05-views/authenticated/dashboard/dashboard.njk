        </div>
    </div>
    <div class="row">
        <div class="col-12 col-lg-8">
            <h3 class="h4">Players:</h3>
            {% render '@user-list' %}
            <h4 class="h4 mt-3">Staff:</h4>
            {% render '@user-list' %}
        </div>
