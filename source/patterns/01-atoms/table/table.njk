<table class="table{% if modifier %} table-{{modifier}}{% endif %}{% if class %} {{class}}{% endif %}">
    {% if head %}
    <thead>
        {% for row in head %}
        <tr>
            {% for cell in row %}
            <th{% if scope %} scope="{{scope}}"{% endif %}>{{cell}}</th>
            {% endfor %}
        </tr>
        {% endfor %}
    </thead>
    {% endif %}

    {% if body %}
    <tbody>
        {% for row in body %}
        <tr>
            {% for cell in row %}
            <td{% if scope %} scope="{{scope}}"{% endif %}>{{cell}}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </tbody>
    {% endif %}

    {% if foot %}
    <tfoot>
        {% for row in foot %}
        <tr>
            {% for cell in row %}
            <td{% if scope %} scope="{{scope}}"{% endif %}>{{cell}}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </tfoot>
    {% endif %}
</table>
