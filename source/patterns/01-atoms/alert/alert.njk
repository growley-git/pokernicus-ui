<div{% if id %} id="{{id}}"{% endif %} class="alert{% if modifier %} alert-{{modifier}}{% endif %}{% if class %} {{class}}{% endif %}{% if dismissible %} alert-dismissible fade{% endif %}{% if show %} show{% endif %}" role="alert">
{% if heading %}
    <{{heading.tag}} class="alert-heading">{{heading.text|safe}}</{{heading.tag}}>
{% endif %}
{% if iconLeft %}
    {% render '@icon', iconLeft, true %}
{% endif %}
{% if text %}
    {{text|safe}}
{% endif %}
{% if iconRight %}
    {% render '@icon', iconRight, true %}
{% endif %}
{% if dismissible %}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
{% endif %}
</div>
