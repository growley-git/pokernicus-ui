<div class="alert{% if modifier %} alert-{{modifier}}{% endif %}{% if dismissible %} alert-dismissible fade show{% endif %}" role="alert">
    {% if heading %}
        <{{heading.tag}} class="alert-heading">{{heading.text}}</{{heading.tag}}>
    {% endif %}
    {{text | safe}}
    {% if dismissible %}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    {% endif %}
</div>