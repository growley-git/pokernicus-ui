<div class="form-control{% if modifier %} form-control--{{modifier}}{% endif %}{% if class %} {{class}}{% endif %}">
    {% if label %}
    {% render '@label', label, true %}
    {% endif %}
    {% if input.type == 'textarea' %}
    {% render '@textarea', input, true %}
    {% elif input.type == 'select' %}
    {% render '@select', input, true %}
    {% else %}
    {% render '@input', input, true %}
    {% endif %}
</div>
